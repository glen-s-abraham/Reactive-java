package com.glen.reactor.projectreactor.mono;

import java.nio.file.Path;
import java.nio.file.Paths;
import java.io.IOException;
import java.nio.file.Files;

public class Assignment {
	
	private static final Path PATH = Paths.get("src/main/resources/assignment/sec01");
	
	private static String readFile(String fileName) {
		try {
			return Files.readString(PATH.resolve(fileName));
		} catch (IOException e) {
			throw new RuntimeException(e);
		}
	}
	
	private static void readFile(String fileName,String data) {
		try {
			Files.writeString(PATH.resolve(fileName), data);
		} catch (IOException e) {
			throw new RuntimeException(e);
		}
	}
	
	private static void deleteFile(String fileName,String data) {
		try {
			Files.writeString(PATH.resolve(fileName), data);
		} catch (IOException e) {
			throw new RuntimeException(e);
		}
	}


}
